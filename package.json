{
  "name": "cursed-bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky && husky install",
    "prebuild": "rimraf -rf dist",
    "eslint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "jest --runInBand --silent",
    "test:cov": "npm run test -- --coverage=true",
    "start:local": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/index.ts dotenv_config_path=.env.local",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only ./src/index.ts dotenv_config_path=.env.dev",
    "start:prod": "node -r tsconfig-paths/register ./dist/index.js"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "discord",
    "bot",
    "typescript"
  ],
  "author": "Arthur Akira",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@types/jest": "28.1.8",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jest": "28.1.3",
    "lint-staged": "^15.2.10",
    "prettier": "^2.3.2",
    "ts-jest": "28.0.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "bufferutil": "^4.0.8",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "rimraf": "^6.0.1"
  }
}
